<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!--  see https://developer.android.com/training/material/theme.html  -->
        <item name="colorPrimary">@color/primaryColorLight</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <!--ie text color-->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <!--ie text color-->
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Status bar color. -->

        <!--for Materialcompents -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/primaryColorDark</item>

    </style>

</resources>